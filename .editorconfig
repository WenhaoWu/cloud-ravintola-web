# Editor configuration, see http://editorconfig.org
root = true

[*.*]
charset = utf-8
indent_style = space
insert_final_newline = true

[*.{ts, html}]
max_line_length = 100

indent_size = 4
trim_trailing_whitespace = true

[*.html]
max_line_length = 100
indent_size = 4
trim_trailing_whitespace = true

[*.css]
max_line_length = 80
indent_size = 2
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.xlf]
max_line_length = 100
indent_size = 2
trim_trailing_whitespace = true
